<div class="slide-out-bg"></div>

<div class="slide-out">
	<div class="slide-out-card">
		<LinkTo @route="lead" class="btn-back">	
			<span class="sr-only">Back</span>
		</LinkTo>
		<div class="slide-out-heading">
			<div class="title">
				<h3>{{model.first}} {{model.last}}</h3>
				<div class="actions">
					<LinkTo @route="lead.edit" @model={{model}}>
						<button class="btn-pop">Edit</button>
					</LinkTo>
					<button class="btn-recessed" onclick={{action "deleteLead" model}}>
						Delete
					</button>
				</div>
			</div>
      <div class="details">
        <p>
          <strong>Email:</strong> {{model.email}}
        </p>
        <p>
          <strong>Lead added on:</strong> {{moment-format model.createdAt 'dddd, MMMM Do YYYY'}}
        </p>
      </div>
		</div>
		<div class="slide-out-content">
    </div>
	</div>
</div>
