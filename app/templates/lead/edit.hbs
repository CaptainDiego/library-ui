<div class="slide-out-bg"></div>

<div class="slide-out">
	<div class="slide-out-card">
		<LinkTo @route="lead.profile" @model={{model}} class="btn-back">	
			<span class="sr-only">Back</span>
		</LinkTo>
		<div class="slide-out-heading">
			<div class="title">
				<h3>Editing: {{model.first}} {{model.last}}</h3>
			</div>
		</div>
		<div class="slide-out-content">
			<Lead-form @lead={{model}} @saveLead={{action "saveLead"}}/>
		</div>
	</div>
</div>