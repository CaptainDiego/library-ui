<form onsubmit={{action "submitChanges"}}>
	<div class="field">
		<label>
			First Name:
		</label>
		<Input @type="text" @value={{first}} placehodler="Lead's First Name"/>
	</div>
	<div class="field">
		<label>
			Last Name:
		</label>
		<Input @type="text" @value={{last}} placehodler="Lead's Last Name"/>
	</div>				
	<div class="field">
		<label>
			Email:
		</label>
		<Input @type="email" @value={{email}} placehodler="Lead's email"/>
	</div>
	<div class="form-footer">
		<button type="submit" class="btn-submit">
			Save
		</button>
	</div>
</form>